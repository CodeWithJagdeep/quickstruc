# ------------------------------
# Server Configuration
# ------------------------------
PORT=8000                       # The port your application runs on.
NODE_ENV=development             # Environment mode: development, production, or test.
ALLOWED_ORIGINS = http://localhost:3000
# ------------------------------
# Database Configuration
# ------------------------------
DB_NAME=mydb # DB name.
DB_PASSWORD=yourpassword  # Add a password here
DATABASE_URL="mysql://root:yourpassword@db:3306/mydb"    


# ------------------------------
# JWT (JSON Web Token) Configuration
# ------------------------------
JWT_SECRET=your_jwt_secret_key   # Secret key for signing JWT tokens.
JWT_EXPIRES_IN=1h                # Expiry duration for JWT tokens. Example: 1h, 7d.

# ------------------------------
# Email Server Configuration
# ------------------------------
MAIL_HOST=smtp.example.com       # SMTP server address for sending emails.
MAIL_PORT=587                    # SMTP server port (587 for TLS, 465 for SSL).
MAIL_USERNAME=your_email@example.com  # Email account username for SMTP authentication.
MAIL_PASSWORD=your_email_password     # Email account password for SMTP authentication.
MAIL_FROM_NAME=YourAppName       # Display name for outgoing emails.
MAIL_FROM_ADDRESS=no-reply@example.com  # Sender email address for outgoing emails.

# ------------------------------
# Logging Configuration
# ------------------------------
LOG_LEVEL=info                   # Logging level: debug, info, warn, error.

# ------------------------------
# API Configuration
# ------------------------------
BASE_API_URL=http://localhost:3000/api  # Base URL for your application's API.

# ------------------------------
# Docker Configuration
# ------------------------------
DOCKER_ENV=development           # Environment mode for Docker. Example: development, production.

# ------------------------------
# Third-Party API Keys (Optional)
# ------------------------------
THIRD_PARTY_API_KEY=your_third_party_api_key  # API key for third-party integrations.

# ------------------------------
# Miscellaneous Configuration
# ------------------------------
APP_NAME=MyApp                   # The name of your application.
TIMEZONE=UTC                     # Server timezone. Example: UTC, Asia/Kolkata.

